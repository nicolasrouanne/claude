{
  "permissions": {
    "allow": [
      "Bash(/Applications/Claude.app/Contents/Resources/app/bin/claude mcp:*)",
      "Bash(bin/rails generate:*)",
      "Bash(bin/rails runner:*)",
      "Bash(brew install:*)",
      "Bash(brew services stop:*)",
      "Bash(bundle exec rspec:*)",
      "Bash(bundle exec rubocop:*)",
      "Bash(bundle install:*)",
      "Bash(gh pr create:*)",
      "Bash(git add:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(test:*)",
      "Bash(try --help:*)",
      "Bash(uv run:*)",
      "Bash(uv sync:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Submarine.aiff &"
          }
        ]
      }
    ]
  }
}
